<%= form_for(window) do |f| %>
  <% if window.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(window.errors.count, "error") %> prohibited this window from being saved:</h2>

      <ul>
      <% window.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message %>
    <%= select_tag :start_date, options_for_select(@dates) %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, Window.statuses.keys.to_a %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
