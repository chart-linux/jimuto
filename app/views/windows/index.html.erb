<p id="notice"><%= notice %></p>

<h1>Windows</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @windows.each do |window| %>
      <tr>
        <td><%= window.message %></td>
        <td><%= link_to 'Show', window %></td>
        <td><%= link_to 'Solutions', solutions_path(window_id: window.id ) %>
        <td><%= link_to 'Edit', edit_window_path(window) %></td>
        <td><%= link_to 'Destroy', window, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Window', new_window_path %>
