<%= form_for @solution  do |f| %>
  <% if solution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

      <ul>
      <% solution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Shifts</h1>
  
  <div class='timetable'>
      <% @shifts.each do |day, shiftday| %>
        <div class='day'>
        <% shiftday.each do |shift| %>
        <div class='box'><%= shift.start.strftime('%H:%M') %> - <%= shift.end.strftime('%H:%M') %>
          <%= select_tag "shift[#{shift.id}]", options_for_select( shift.requests.map{|request| [request.user.name + request.user.point.to_s + request.eagerness.to_s, request.user.id] } ) %>
        </div>
      <% end %>
      </div>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
